GO
CHECKPOINT
GO
DBCC SHRINKFILE ('$DBNAME$_log', $FileSize$)
GO
--ALTER DATABASE $DBNAME$ MODIFY FILE (NAME = '$DBNAME$_log', SIZE = $FileSize$MB)
]]></Code>
